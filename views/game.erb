<form action="/make_move" method="post" class="game-form">
  <table border="1">
    <% @spots.each do |row| %>
      <tr>
        <% row.each_with_index do |spot, index| %>
          <% if spot.class == Fixnum %>
            <td height="100" width="100"> 
              <input type="radio" name="chosen-move" value="<%= spot.to_i %>" class="choice-button">
            </td>
          <% else %>
            <td height="100" width="100">
              <%= spot %>
            </td>            
          <% end %>
        <% end %>
      <tr>
    <% end %>
  </table>
</form>
